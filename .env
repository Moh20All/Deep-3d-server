# Copy this file to .env and fill in the secrets
# IMPORTANT: Double-check the DB name/URI per environment (dev/test/prod) to avoid accidental data loss.

# --- Core ---
NODE_ENV=development
PORT=3001
MONGO_URI=mongodb://localhost:27017/madrassaplay
JWT_SECRET=replace_me_with_a_secure_random_string
CORS_ORIGIN=http://localhost:5173

# --- Safety toggles ---
# Gate the scheduled school deletion job. Keep false unless you intentionally need the cron.
ENABLE_SCHOOL_DELETION_CRON=false

# Take a lightweight JSON snapshot of core collections at server start (to server/backups).
# Recommended: temporarily set to true right after a DB restore or before risky ops.
BACKUP_ON_START=false

